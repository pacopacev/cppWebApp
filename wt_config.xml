<?xml version="1.0" encoding="UTF-8"?>
<server>
    <!-- Server settings -->
    <http-address>0.0.0.0</http-address>
    <http-port>8080</http-port>
    
    <!-- Session settings -->
    <session-timeout>600</session-timeout>
    <max-request-size>409600</max-request-size>
    
    <!-- Document root and static files -->
    <docroot>.</docroot>
    
    <!-- Logging -->
    <log-file>wt.log</log-file>
    <log-config>* -debug -info:Wt</log-config>
    
    <!-- Application settings -->
    <application-settings>
        <location>
            <path>/</path>
            <app-root>webapp</app-root>
        </location>
    </application-settings>
</server>